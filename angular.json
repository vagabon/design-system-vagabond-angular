{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ng-dsv": {
      "projectType": "library",
      "root": "projects/ng-dsv",
      "sourceRoot": "projects/ng-dsv/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ng-dsv/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ng-dsv/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ng-dsv/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/ng-dsv/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/ng-dsv/.storybook",
            "browserTarget": "ng-dsv:build",
            "compodoc": true,
            "styles": [
              "node_modules/remixicon/fonts/remixicon.css",
              "projects/ng-dsv/src/global.scss"
            ],
            "compodocArgs": ["-e", "json", "-d", "projects/ng-dsv"],
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/ng-dsv/.storybook",
            "browserTarget": "ng-dsv:build",
            "compodoc": true,
            "compodocArgs": ["-e", "json", "-d", "projects/ng-dsv"],
            "outputDir": "storybook-static"
          }
        }
      }
    }
  }
}
